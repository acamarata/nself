// Graceful shutdown
const gracefulShutdown = async () => {
  console.log('ğŸ›‘ Shutting down gracefully...');
  
  try {
    if (worker) {
      await worker.shutdown();
      console.log('ğŸ”„ Temporal worker shutdown');
    }

    process.exit(0);
  } catch (error) {
    console.error('Error during shutdown:', error);
    process.exit(1);
  }
};

