let worker = null;
let client = null;

// Initialize Temporal worker
async function startWorker() {
  try {
    console.log(`ğŸ”„ Connecting to Temporal at ${TEMPORAL_ADDRESS}...`);
    
    client = new Client({ serverOptions: { address: TEMPORAL_ADDRESS } });
    
    worker = await Worker.create({
      workflowsPath: path.resolve('./workflows.js'),
      activities,
      taskQueue: TASK_QUEUE,
    });

    console.log(`ğŸš€ Temporal worker started on task queue: ${TASK_QUEUE}`);
    await worker.run();
  } catch (error) {
    console.error('âŒ Failed to start Temporal worker:', error);
    throw error;
  }
}

