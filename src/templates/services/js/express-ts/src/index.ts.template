import express, { Request, Response, NextFunction } from 'express';
import cors from 'cors';
import helmet from 'helmet';
import { Server } from 'http';

const app = express();
const PORT = parseInt(process.env.PORT || '3000', 10);

// Interfaces
interface HealthResponse {
  status: string;
  service: string;
  timestamp: string;
}

interface InfoResponse {
  service: string;
  environment: string;
  uptime: number;
  memory: NodeJS.MemoryUsage;
  domain: string;
}

interface EchoResponse {
  received: any;
  timestamp: string;
}

interface ErrorResponse {
  error: string;
  message?: string;
  path?: string;
}

// Security middleware
app.use(helmet());

// CORS middleware
app.use(cors({
  origin: process.env.CORS_ORIGIN || '*',
  credentials: true,
  methods: ['GET', 'POST', 'PUT', 'DELETE', 'OPTIONS'],
  allowedHeaders: ['Content-Type', 'Authorization', 'X-Requested-With']
}));

// Body parsing middleware
app.use(express.json({ limit: '10mb' }));
app.use(express.urlencoded({ extended: true, limit: '10mb' }));

// Health check endpoint
app.get('/health', (req: Request, res: Response) => {
  const response: HealthResponse = {
    status: 'healthy',
    service: '{{SERVICE_NAME}}',
    timestamp: new Date().toISOString()
  };
  res.json(response);
});

// Hello World endpoint
app.get('/', (req: Request, res: Response) => {
  res.json({
    message: 'Hello from {{SERVICE_NAME}}!',
    project: '{{PROJECT_NAME}}',
    framework: 'Express TypeScript',
    version: '4.18.2'
  });
});

// Example API endpoint
app.get('/api/info', (req: Request, res: Response) => {
  const response: InfoResponse = {
    service: '{{SERVICE_NAME}}',
    environment: process.env.NODE_ENV || 'development',
    uptime: process.uptime(),
    memory: process.memoryUsage(),
    domain: '{{BASE_DOMAIN}}'
  };
  res.json(response);
});

// Example POST endpoint
app.post('/api/echo', (req: Request, res: Response) => {
  const response: EchoResponse = {
    received: req.body,
    timestamp: new Date().toISOString()
  };
  res.json(response);
});

// 404 handler
app.use((req: Request, res: Response) => {
  const response: ErrorResponse = {
    error: 'Not Found',
    path: req.path
  };
  res.status(404).json(response);
});

// Error handler
app.use((err: Error, req: Request, res: Response, next: NextFunction) => {
  console.error(err.stack);
  const response: ErrorResponse = {
    error: 'Internal Server Error',
    message: process.env.NODE_ENV === 'development' ? err.message : 'Something went wrong!'
  };
  res.status(500).json(response);
});

// Graceful shutdown
const gracefulShutdown = (server: Server) => {
  return (): void => {
    console.log('ğŸ›‘ Shutting down gracefully...');
    server.close(() => {
      console.log('âœ… HTTP server closed');
      process.exit(0);
    });
  };
};

// Start server
const server = app.listen(PORT, () => {
  console.log(`ğŸš€ {{SERVICE_NAME}} is running on port ${PORT}`);
  console.log(`ğŸ“ Health check: http://localhost:${PORT}/health`);
  console.log(`ğŸŒ API endpoint: http://localhost:${PORT}/api/info`);
  console.log(`ğŸ’¬ Echo endpoint: POST http://localhost:${PORT}/api/echo`);
});

// Handle shutdown signals
process.on('SIGTERM', gracefulShutdown(server));
process.on('SIGINT', gracefulShutdown(server));