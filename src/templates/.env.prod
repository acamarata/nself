#####################################
# Core Settings
#####################################
ENV=prod
PROJECT_NAME=myproject
BASE_DOMAIN=mycompany.com

#####################################
# Public Service URLs
#####################################
# Production endpoints - safe to commit since they're public

# HASURA_ROUTE=api.mycompany.com
# AUTH_ROUTE=auth.mycompany.com
# STORAGE_ROUTE=storage.mycompany.com
# FRONTEND_URL=https://app.mycompany.com

#####################################
# Resource Configuration
#####################################
# Production resource allocations

# POSTGRES_MAX_CONNECTIONS=200
# POSTGRES_POOL_SIZE=100
# REDIS_MAXMEMORY=2gb
# HASURA_GRAPHQL_PG_CONNECTIONS=100

#####################################
# Security & Features
#####################################
# HASURA_GRAPHQL_ENABLE_CONSOLE=false
# HASURA_GRAPHQL_DEV_MODE=false
# HASURA_GRAPHQL_ENABLE_TELEMETRY=false
# HASURA_GRAPHQL_UNAUTHORIZED_ROLE=anonymous
# HASURA_GRAPHQL_CORS_DOMAIN=https://app.mycompany.com,https://www.mycompany.com

#####################################
# Rate Limiting & Protection
#####################################
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS_PER_MINUTE=100
# DDOS_PROTECTION=true
# WAF_ENABLED=true

#####################################
# Monitoring & Observability (nself Stack)
#####################################
# LOG_LEVEL=warn
# MONITORING_PROFILE=full  # minimal, standard, full, custom
# MONITORING_METRICS=true
# MONITORING_LOGS=true
# MONITORING_TRACING=true
# MONITORING_ALERTS=true

# Prometheus Configuration
# PROMETHEUS_RETENTION=30d
# PROMETHEUS_MEMORY_LIMIT=1Gi
# PROMETHEUS_ROUTE=metrics.mycompany.com

# Grafana Configuration
# GRAFANA_ROUTE=dashboards.mycompany.com
# GRAFANA_ORG_NAME=MyCompany
# GRAFANA_PUBLIC_DASHBOARDS=false

# Loki (Log Aggregation)
# LOKI_RETENTION=14d
# LOKI_MEMORY_LIMIT=512Mi

# Tempo (Distributed Tracing)
# TEMPO_RETENTION=72h
# TEMPO_MEMORY_LIMIT=512Mi

#####################################
# Custom Services (Production)
#####################################
# Production domains for custom services
# Example:
