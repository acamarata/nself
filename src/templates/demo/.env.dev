# ╔═══════════════════════════════════════════════════════╗
# ║            DEVELOPMENT ENVIRONMENT                     ║
# ╠═══════════════════════════════════════════════════════╣
# ║ Full demo with all services for development           ║
# ╚═══════════════════════════════════════════════════════╝

# Core Settings
ENV=dev
PROJECT_NAME=demo-app
BASE_DOMAIN=local.nself.org

# Database Configuration
POSTGRES_DB=demo_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=demo-password
POSTGRES_PORT=5432

# Hasura Configuration
HASURA_GRAPHQL_ADMIN_SECRET=demo-admin-secret
HASURA_GRAPHQL_ENABLE_CONSOLE=true
HASURA_GRAPHQL_DEV_MODE=true
HASURA_JWT_KEY=demo-jwt-secret-key-minimum-32-characters-long
HASURA_ROUTE=api

# Auth Service
AUTH_JWT_SECRET=demo-jwt-secret-key-minimum-32-characters-long
AUTH_ROUTE=auth
AUTH_CLIENT_URL=http://localhost:3000
AUTH_EMAIL_VERIFICATION_REQUIRED=false

# Optional Services - All Enabled for Demo
NSELF_ADMIN_ENABLED=true
MINIO_ENABLED=true
REDIS_ENABLED=true
FUNCTIONS_ENABLED=true
MLFLOW_ENABLED=true
MAILPIT_ENABLED=true
MEILISEARCH_ENABLED=true

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_DEFAULT_BUCKETS=uploads,public,private,temp,mlflow-artifacts

# Redis Configuration
REDIS_PASSWORD=demo-redis-password

# MeiliSearch Configuration
MEILISEARCH_MASTER_KEY=demo-meilisearch-master-key-32chars

# Monitoring - Full Stack Enabled
MONITORING_ENABLED=true
GRAFANA_ADMIN_PASSWORD=demo-grafana-password

# Custom Backend Services (4 diverse examples)
CS_1=express_api:express-js:8001
CS_2=bullmq_worker:bullmq-js:8002
CS_3=go_grpc:grpc:8003
CS_4=python_api:fastapi:8004

# Express API Configuration
CS_1_ROUTE=express-api
CS_1_PUBLIC=true
CS_1_HEALTHCHECK=/health

# BullMQ Worker Configuration (no public route)
CS_2_PUBLIC=false
CS_2_QUEUE_NAME=demo-jobs

# Go gRPC Configuration
CS_3_ROUTE=grpc-api
CS_3_PUBLIC=true
CS_3_HEALTHCHECK=/health

# Python API Configuration
CS_4_ROUTE=ml-api
CS_4_PUBLIC=true
CS_4_HEALTHCHECK=/health

# Frontend Applications (External)
FRONTEND_APP_1_NAME=app1
FRONTEND_APP_1_PORT=3000
FRONTEND_APP_1_ROUTE=app1

FRONTEND_APP_2_NAME=app2
FRONTEND_APP_2_PORT=3001
FRONTEND_APP_2_ROUTE=app2

# Development Features
DEBUG=true
LOG_LEVEL=debug
ENABLE_HOT_RELOAD=true
SEED_DATA=true