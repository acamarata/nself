#!/usr/bin/env bash
# nself - CLI wrapper for development and CI/CD
#
# This wrapper allows running nself commands from the repository root
# during development and in CI/CD environments.
#
# In production installations, this is replaced by the package manager's
# wrapper that points to the installed location.

set -e

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Execute the actual nself CLI
exec "${SCRIPT_DIR}/src/cli/nself.sh" "$@"
